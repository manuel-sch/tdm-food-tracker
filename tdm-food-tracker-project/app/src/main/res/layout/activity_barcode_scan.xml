<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.BarcodeScanActivity"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:indeterminate="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            />

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/barcode_text"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" />

        <TextView
            android:id="@+id/barcode_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barcode Text"
            android:gravity="center"
            android:textSize="25sp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_product_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/bluegreen_dark"
            app:iconTint="@color/white"
            android:text="HinzufÃ¼gen"
            android:textColor="@color/white"
            app:icon="@drawable/ic_input"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="TODO"
            android:onClick="handleProductInputFab"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/bluegreen_dark"
            app:fabSize="normal"
            app:tint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/fab_product_input"
            app:layout_constraintEnd_toEndOf="@+id/fab_product_input"
            app:srcCompat="@drawable/ic_form"
            android:contentDescription="TODO"
            android:visibility="gone"
            android:onClick="handleProductAddFormFab"/>

        <TextView
            android:id="@+id/textView_add_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Selber erstellen"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/fab_add_form"
            app:layout_constraintEnd_toStartOf="@+id/fab_add_form"
            app:layout_constraintTop_toTopOf="@+id/fab_add_form"
            android:visibility="gone"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="@color/bluegreen_dark"
            app:fabSize="normal"
            app:tint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/fab_add_form"
            app:layout_constraintEnd_toEndOf="@+id/fab_add_form"
            app:layout_constraintStart_toStartOf="@+id/fab_add_form"
            app:srcCompat="@drawable/ic_search"
            android:contentDescription="TODO"
            android:visibility="gone"
            android:onClick="handleProductSearchFab"/>

        <TextView
            android:id="@+id/textView_add_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Produkt suchen"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/fab_add_search"
            app:layout_constraintEnd_toStartOf="@+id/fab_add_search"
            app:layout_constraintTop_toTopOf="@+id/fab_add_search"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>
