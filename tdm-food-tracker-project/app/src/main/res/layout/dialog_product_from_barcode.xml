<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textView_productTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produkttitel"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_productTitle" />

    <TextView
        android:id="@+id/textView_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="gekauft:"
        app:layout_constraintStart_toEndOf="@id/imageView_product"
        app:layout_constraintTop_toBottomOf="@id/textView_productTitle" />

    <TextView
        android:id="@+id/textView_expires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="läuft ab:"
        app:layout_constraintStart_toEndOf="@id/imageView_product"
        app:layout_constraintTop_toBottomOf="@id/textView_bought" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_boughtDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Datum eingeben"
        android:inputType="textAutoCorrect"
        app:layout_constraintStart_toEndOf="@id/textView_bought"
        app:layout_constraintTop_toBottomOf="@id/textView_productTitle"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_expiryDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:hint="Datum eingeben"
        android:inputType="textAutoCorrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_expires"
        app:layout_constraintTop_toBottomOf="@id/editText_boughtDate"/>

    <TextView
        android:id="@+id/textView_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lagerung:"
        app:layout_constraintStart_toEndOf="@id/imageView_product"
        app:layout_constraintTop_toBottomOf="@id/textView_expires" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@id/imageView_product"
        app:layout_constraintTop_toBottomOf="@id/textView_storage"  />

    <Button
        android:id="@+id/abbrechen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="16dp"
        android:onClick="closeDialogForProductRequest"
        android:text="Abbrechen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/bestaetigen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="44dp"
        android:onClick="bestaetigen"
        android:text="Bestätigen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />


</androidx.constraintlayout.widget.ConstraintLayout>

