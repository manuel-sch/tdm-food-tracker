<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/margin_normal"
    android:background="@drawable/product_item_selector"
    android:foreground="?selectableItemBackground"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="25dp">

            <ImageView
                android:id="@+id/imageView_product"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/description_productImage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_product_expiry_date"
                style="@style/title_primary_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="30"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/margin_product_item_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_product"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/placeholder_productname" />

            <TextView
                android:id="@+id/textView_productQuantity"
                style="@style/text_primary_normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView_product"
                app:layout_constraintTop_toBottomOf="@id/textView_product_expiry_date"
                tools:text="@string/placeholder_productUnit" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>