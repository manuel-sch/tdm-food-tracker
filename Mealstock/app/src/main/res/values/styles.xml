<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="animation_fade_in_fade_out">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="text_primary_1">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="title_primary_1">
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="title_primary_2">
        <item name="android:textAlignment">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_primary_3">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editText_primary_1">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
    </style>

    <style name="editText_picker_1">
        <item name="android:background">@color/white</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:inputType">textAutoCorrect</item>
    </style>

</resources>

